@page
@model Tp1AspNet_Sqlite.Pages.Livres.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Custom CSS for the form */
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #d1d1d1;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-container h1 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        color: #333;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 1.2rem;
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        font-size: 1.2rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 10px;
        width: 100%;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .text-danger {
        color: #dc3545;
        font-size: 1.1rem;
    }

    .btn-primary {
        font-size: 1.2rem;
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        color: #fff;
        width: 100%;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="container form-container">
    <h1>Create a New Livre</h1>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Livre.titre" class="control-label">Livre Title</label>
            <input asp-for="Livre.titre" class="form-control" placeholder="Enter livre title" required />
            <span asp-validation-for="Livre.titre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Livre.desc" class="control-label">Description</label>
            <textarea asp-for="Livre.desc" class="form-control" placeholder="Enter livre description" ></textarea>
            <span asp-validation-for="Livre.desc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Livre.category" class="control-label">Category</label>
            <input asp-for="Livre.category" class="form-control" placeholder="Enter livre category"  />
            <span asp-validation-for="Livre.category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Livre.price" class="control-label">Price</label>
            <input asp-for="Livre.price" class="form-control" type="number" step="0.01" placeholder="Enter livre price"  />
            <span asp-validation-for="Livre.price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Livre.ImageFile" class="control-label">Livre Image</label>
            <input type="file" class="form-control" id="imageFile" name="imageFile" />
            <span asp-validation-for="Livre.ImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Livre</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}